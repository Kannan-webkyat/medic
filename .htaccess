RewriteEngine On
RewriteBase /medic/

# Exclude /medic/admin from rewriting
RewriteRule ^admin($|/) - [L]

# Rewrite URLs from /course-details/1 to /course-details.php?id=1
RewriteRule ^course-details/([^/]+)$ course-details.php?id=$1 [QSA,NC,L]

# Rewrite URLs from /college-details/1 to /college-details.php?id=1
RewriteRule ^college-details/([^/]+)$ college-details.php?id=$1 [QSA,NC,L]

# Rewrite URLs to add .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]+)/?$ $1.php [NC,L]
